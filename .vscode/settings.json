{
  // Use modern file watching for better performance
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/build/**": true
  },
  // Enable modern TypeScript server features
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.log": "off",
  // Remove legacy file watching if present
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents"
  }
}
{
  // --- General Performance: Exclude folders from all tools ---
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/.gradle/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/dist/**": true,
    "**/out/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/.gradle": true,
    "**/.venv": true,
    "**/venv": true
  },

  // --- Deno: Only enable for the web app ---
  "deno.enable": true,
  "deno.enablePaths": [
    "apps/web"
  ],

  // --- Git: ensure VS Code uses a portable binary path ---
  "git.path": "/opt/homebrew/bin/git",
  // --- ESLint: Specify the working directory ---
  "eslint.workingDirectories": [
    "./apps/web"
  ],

  // --- Java: Point to the correct source folders ---
  "java.project.sourcePaths": [
    "src/main/java",
    "src/test/java"
  ],

  // --- SonarLint: Exclude folders from analysis ---
  "sonarlint.ls.exclusions": [
    "**/node_modules/**",
    "**/.next/**",
    "**/build/**",
    "**/.gradle/**",
    "**/dist/**",
    "**/.venv/**",
    "**/venv/**"
  ],
  "java.configuration.updateBuildConfiguration": "interactive",
  "sonarlint.connectedMode.project": {
    "connectionId": "abaco-technol",
    "projectKey": "abaco-loans-analytics"
  },
  "java.compile.nullAnalysis.mode": "automatic",
  "python.analysis.typeCheckingMode": "standard",
  "python-envs.defaultEnvManager": "ms-python.python:system",
  "python-envs.pythonProjects": [],

  // --- Analytics & Traceability: Prioritize KPIs, dashboards, and auditability ---
  // Ensure all code changes for JS/TS run lint at repo root (see AGENTS.md)
  // Document public utilities in docs/ when changing behavior

  // --- Collaboration & Best Practices ---
  // Use standardized documentation and review checklists for all dashboard/KPI changes
  // Maintain clear roles and context for all measurement and visualization outputs

  // --- Compliance & Security ---
  // Mask PII in all dashboards and restrict access to sensitive data
  // Log all dashboard actions and alert payloads for audit

  // --- Continuous Learning ---
  // Surface last refresh time, commit SHA, and contract links in dashboards
  // Require multi-domain approval for KPI changes and dashboard rollouts
}
