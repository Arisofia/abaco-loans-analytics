{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "version",
        "namespace",
        "last_updated",
        "audit_required",
        "kpis",
        "departmental_kpi_mappings"
    ],
    "properties": {
        "version": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "last_updated": {
            "type": "string"
        },
        "audit_required": {
            "type": "boolean"
        },
        "kpis": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
                "$ref": "#/$defs/kpi"
            }
        },
        "departmental_kpi_mappings": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    },
    "$defs": {
        "kpi": {
            "type": "object",
            "required": [
                "name",
                "description",
                "formula",
                "window",
                "basis",
                "unit",
                "direction",
                "thresholds",
                "data_contract",
                "snapshot_boundary",
                "owner_agent",
                "version"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "formula": {
                    "type": "string"
                },
                "window": {
                    "type": "string"
                },
                "basis": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                },
                "direction": {
                    "type": "string",
                    "enum": [
                        "lower_is_better",
                        "higher_is_better"
                    ]
                },
                "thresholds": {
                    "type": "object",
                    "required": [
                        "green",
                        "yellow",
                        "red"
                    ],
                    "properties": {
                        "green": {
                            "type": "number"
                        },
                        "yellow": {
                            "type": "number"
                        },
                        "red": {
                            "type": "number"
                        }
                    }
                },
                "data_contract": {
                    "type": "object",
                    "required": [
                        "source_tables",
                        "required_columns",
                        "null_handling"
                    ],
                    "properties": {
                        "source_tables": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string"
                            }
                        },
                        "required_columns": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string"
                            }
                        },
                        "null_handling": {
                            "type": "string",
                            "enum": [
                                "treat as 0",
                                "exclude",
                                "error"
                            ]
                        }
                    }
                },
                "snapshot_boundary": {
                    "type": "string"
                },
                "owner_agent": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "query": {
                    "type": "object",
                    "required": [
                        "view",
                        "value_column"
                    ],
                    "properties": {
                        "view": {
                            "type": "string"
                        },
                        "value_column": {
                            "type": "string"
                        },
                        "where": {
                            "type": "object"
                        },
                        "params": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "required": {
                                        "type": "boolean"
                                    },
                                    "enum": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "range": {
                                        "type": "object",
                                        "properties": {
                                            "min": {
                                                "type": "number"
                                            },
                                            "max": {
                                                "type": "number"
                                            }
                                        },
                                        "required": [
                                            "min",
                                            "max"
                                        ]
                                    },
                                    "nullable": {
                                        "type": "boolean"
                                    },
                                    "default": {}
                                },
                                "required": [
                                    "type"
                                ]
                            }
                        }
                    },
                    "additionalProperties": true
                }
            },
            "additionalProperties": true
        }
    }
}